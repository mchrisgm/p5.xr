{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "ignorePatterns": ["/tests/*", "/examples/*"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off",
        "no-undef": "off",
        "func-names": "off",
        "new-cap": "off",
        "no-multi-assign":"off",
        "no-restricted-syntax":"off",
        "no-plusplus":"off",
        "no-param-reassign":"off",
        "prefer-destructuring": "off",
        "max-len": [2, 175, 4],
        "prefer-rest-params" : "off",
        "consistent-return" : "off",
        "linebreak-style" : "off",
        "no-console" : "off",
        "space-infix-ops": "off"
    }
}
